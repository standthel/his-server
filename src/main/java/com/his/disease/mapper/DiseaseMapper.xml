<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
       
<mapper namespace="com.his.disease.mapper.DiseaseMapper">
	<select id="getdiseaseInfo" resultType="disease">
		select * from his.disease where DiseCategoryID = #{diseCategoryID} order by ID limit #{page}, #{limit}
	</select>
	<select id="getdiseaseInfoTotal" resultType="int">
		select count(*) from disease where diseCategoryID=#{diseCategoryID}
	</select>
	<insert id="addDisease" parameterType="disease">
		insert into his.disease value(null,#{diseaseCode},#{diseaseName},#{diseaseICD},#{diseCategoryID},1)
	</insert>
	<delete id="delDiseaseByIds">
		update his.disease set DelMark=0 where id in
  		<foreach collection="ids" separator="," open="(" close=")" item="id">
  			#{id}
  		</foreach>
	</delete>
	<update id="updateDisease" parameterType="disease">
		update his.disease set diseaseCode=#{diseaseCode},diseaseName=#{diseaseName},diseaseICD=#{diseaseICD},diseCategoryID=#{diseCategoryID} where ID=#{id}
	</update>
	<select id="getDiseaseIds" resultType="int">
		select ID from his.disease where diseCategoryID=#{diseCategoryID} order by ID
	</select>
</mapper>